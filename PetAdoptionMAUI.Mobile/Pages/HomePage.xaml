<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PetAdoptionMAUI.Mobile.ViewModels"
             xmlns:models="clr-namespace:PetAdoptionMAUI.Mobile.Models"
             xmlns:dtos="clr-namespace:PetAdoptionMAUI.Shared.Dtos;assembly=PetAdoptionMAUI.Shared"
             x:Class="PetAdoptionMAUI.Mobile.Pages.HomePage"
             x:DataType="vm:HomeViewModel"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="petsHorizontalListTemplate" x:DataType="dtos:PetListDto">
                <VerticalStackLayout Spacing="2">
                    <Border
                        HeightRequest="100"
                        WidthRequest="100"
                        StrokeShape="RoundRectangle 50"
                        StrokeThickness="0">
                    <Image
                        Source="{Binding Image}"
                        HeightRequest="100"
                        WidthRequest="100"
                        Aspect="AspectFill" />
                    </Border>
                    <Label
                        Text="{Binding Name}"
                        HorizontalOptions="Center"
                        FontSize="16"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}},
                            Path=GoToDetailsPageCommand}"
                            CommandParameter="{Binding Id}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="80, *">
        <VerticalStackLayout
            Grid.Row="0"
            Padding="15"
            Spacing="5">
            <Label
                Text="{Binding UserName, StringFormat='Здравейте, {0}'}"
                FontSize="16"/>
            <Label
                Text="Добре дошли"
                FontSize="20"/>
        </VerticalStackLayout>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10">
                <CarouselView ItemsSource="{Binding NewlyAdded}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate x:DataType="dtos:PetListDto">
                            <Grid RowDefinitions="*, Auto, Auto" RowSpacing="6">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type vm:HomeViewModel}},
                                        Path=GoToDetailsPageCommand}"
                                        CommandParameter="{Binding Id}" />
                                </Grid.GestureRecognizers>
                                <Border
                                    Grid.Row="0"
                                    HeightRequest="250"
                                    WidthRequest="250"
                                    StrokeShape="RoundRectangle 125"
                                    StrokeThickness="0">
                                    <Image
                                        
                                        HeightRequest="250"
                                        WidthRequest="250"
                                        Source="{Binding Image}"
                                        Aspect="AspectFill" />
                                </Border>
                                <Label
                                    Grid.Row="1"
                                    Text="{Binding Name}"
                                    HorizontalOptions="Center"
                                    FontSize="20"
                                    FontAttributes="Bold"/>
                                <Label
                                    Grid.Row="2"
                                    Text="{Binding Price, StringFormat='{0:C}'}"
                                    HorizontalOptions="Center"
                                    FontSize="18"
                                    FontAttributes="Bold"
                                    TextColor="PaleVioletRed"/>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <VerticalStackLayout Padding="15" Spacing="15">
                    <Label
                        Text="Популярни домашни любимци"
                        FontSize="22"
                        FontAttributes="Bold" />
                    <CollectionView
                        ItemsSource="{Binding Popular}"
                        ItemTemplate="{StaticResource petsHorizontalListTemplate}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout Padding="15" Spacing="15">
                    <Label
                        Text="Може да харесате"
                        FontSize="22"
                        FontAttributes="Bold" />
                    <CollectionView
                        ItemsSource="{Binding Random}"
                        ItemTemplate="{StaticResource petsHorizontalListTemplate}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.RowSpan="2" IsVisible="{Binding IsBusy}">
            <BoxView
                Color="AliceBlue"
                Opacity="0.8" />
            <ActivityIndicator
                VerticalOptions="Center"
                HorizontalOptions="Center"
                IsRunning="True"
                Color="White" />
        </Grid>
    </Grid>
</ContentPage>